        <form class="form-cover" action="/api/upload" method="POST" enctype="multipart/form-data">
            <div class="submit-form">
                drag & drop or...
                <label for="audio-upload" class="custom-file-upload">
                    <ion-icon name="cloud-upload-outline" size="large"></ion-icon>
                </label>
                <span class="file-name"></span>
                <input class="fill" 
                       id="audio-upload"
                       draggable="true" 
                       type="file" 
                       accept="audio/*, " 
                       name="audio">
            </div>
                <div class="detail-box">
                    
                    <div class="input-box">
                        <input class="title-input" type="text" name="title" required>
                        <label class="title-label">title</label>
                    </div>
                   
                    <!-- <button type="submit">Upload</button> We are using fetch instead-->  
                    <button onclick="submit">Upload</button>
                </div>
        </form>
            
            
        <script src="front.js"></script>
