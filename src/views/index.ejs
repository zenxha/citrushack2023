<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>TuneShare</title>
</head>
<body>
     
    <div class="container"> 
        <%- include('partials/nav') %>
        <div class="bouncy-box-cover">
            <div class="bouncy-box">
                <div class="form-cover">
                    <!-- voice recording -->
                    <div class="display"></div>
                    <div class="controllers"></div>

                    <!-- form for the file submission -->
                    <form action="/api/vi/upload" method="POST" enctype="multipart/form-data">
                        <!-- drag and drop -->
                        <div class="submit-form">
                            drag & drop or...
                            <label for="audio-upload" class="custom-file-upload" tabindex="1">
                                <ion-icon name="cloud-upload-outline" size="large"></ion-icon>
                            </label>
                            <span class="file-name"></span>
                        </div>
                        
                        <!-- display, title, and upload button -->
                        <div class="detail-box">
                            <%- include('partials/audioPlayer', {filename: ''}) %>

                            <input class="file-upload-input" 
                            id="audio-upload"
                            draggable="true" 
                            type="file" 
                            accept="audio/*, " 
                            name="audio">
                            <div class="small-detail-box">
                                <div class="input-box">
                                    <input class="title-input" type="text" name="title" required>
                                    <label class="title-label">Title</label>
                                </div>
                                
                                
                                <!-- <button type="submit">Upload</button> We are using fetch instead-->  
                                <button class="upload-btn" type="submit">Upload</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
            
            
        <script src="front.js"></script>
    </div>
</body>
</html>

    
