<body>
    <%- include('partials/nav') %>
    <div class="container"> 
        <ul class="nav-bar">
            <li class="icon">icon</li>
            <div class="nav-content">
                <li class="home-btn">
                    <ion-icon name="home-outline" size="large"></ion-icon>
                </li>
                <li class="top">
                    <a href="top.html">
                        <ion-icon name="medal-outline" size="large"></ion-icon>
                    </a>
                </li>
                <div class="Nav-dropdown">
                    <button class="Nav-btn-drop nav-content">
                        <div class="Nav-btn-icon">
                            <ion-icon name="person-outline" size="large"></ion-icon>
                        </div>
                        <span class="Nav-span">
                        </span>
                    </button>
                    <div class="Nav-dropdown-container">
